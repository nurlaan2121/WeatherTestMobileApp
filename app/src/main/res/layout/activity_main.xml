<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marko_one"
        android:text="@string/logo"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/logo"
        android:backgroundTint="@color/white"
        android:layout_marginTop="100sp"
        android:layout_marginHorizontal="50sp"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/text_color_hind"
        android:hint="@string/hind_user_filed" />
    <Button
        android:id="@+id/main_button"
        android:layout_width="match_parent"
        android:layout_below="@+id/user_field"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="130sp"
        android:text="@string/main_button"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/result_info"
        android:layout_below="@id/main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marko_one"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="25sp" />

</RelativeLayout>